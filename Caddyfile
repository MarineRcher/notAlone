# Remplacez par votre domaine
votre-domaine.com {
    reverse_proxy api:3000

    # Configuration HTTPS automatique via Let's Encrypt
    # tls est automatique avec un domaine réel
    # Décommentez la ligne suivante si vous voulez spécifier un email
    #tls votre-email@example.com

    # Logs
    log {
        output file /data/access.log
    }

    # Headers de sécurité
    header {
        # HSTS
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        # Empêcher l'embedding dans des iframes
        X-Frame-Options "DENY"
        # Protection XSS
        X-XSS-Protection "1; mode=block"
        # Empêcher le MIME sniffing
        X-Content-Type-Options "nosniff"
        # Politique de référent
        Referrer-Policy "strict-origin-when-cross-origin"
    }
}

# Configuration pour l'environnement local (optionnel)
notalone.davidgailleton.me {
    reverse_proxy api:3000

    # HTTPS local avec certificat auto-signé
    tls internal
}
