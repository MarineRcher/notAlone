{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "rootDir": "./src",
      "types": ["node", "jest"]
    },
    "include": ["src/**/*", "src/tests"],
    
    "exclude": ["node_modules"]
  }
